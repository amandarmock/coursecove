# CourseCove Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
# Get these from: Supabase Dashboard > Project Settings > API
# Connection string format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"
NEXT_PUBLIC_SUPABASE_URL="https://[your-project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Get these from: Clerk Dashboard > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Get this from: Clerk Dashboard > Webhooks > Your Endpoint > Signing Secret
CLERK_WEBHOOK_SECRET="whsec_..."

# Clerk URLs (use these exact values for local development)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL="/"
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL="/"

# =============================================================================
# BACKGROUND JOBS (Inngest)
# =============================================================================
# For local development, use "test" for both values
# Get production keys from: Inngest Dashboard > Your App > Keys
INNGEST_EVENT_KEY="test"
INNGEST_SIGNING_KEY="test"

# =============================================================================
# EMAIL (Optional - Resend)
# =============================================================================
# Only needed if you want to send emails
# Get from: Resend Dashboard > API Keys
RESEND_API_KEY=""
FROM_EMAIL="dev@coursecove.com"
